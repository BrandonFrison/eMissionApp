<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/pledge_totalamount_text"
        android:layout_width="242dp"
        android:layout_height="151dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="72dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/convection_text"
        android:layout_width="206dp"
        android:layout_height="135dp"
        android:layout_below="@+id/pledge_totalamount_text"
        android:layout_alignStart="@+id/pledge_totalamount_text"
        android:text="TextView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/convection_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"> // Need it this high otherwise covered up by nav bar

        <Button
            android:id="@+id/pledge_statistics_make_your_own_pledge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pledge_statistics_make_your_own_pledge" />

    </LinearLayout>




</RelativeLayout>