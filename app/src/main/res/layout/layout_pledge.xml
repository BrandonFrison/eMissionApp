<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fragment_pledge_list_profile_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    />

                <TextView
                    android:id="@+id/fragment_pledge_list_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/fragment_pledge_list_profile_pic"
                    android:layout_marginStart="5dp"
                    android:text="@string/anonymous" />

                <TextView
                    android:id="@+id/fragment_pledge_list_municipality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/fragment_pledge_list_profile_pic"
                    android:layout_below="@+id/fragment_pledge_list_name"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="" />

                <TextView
                    android:id="@+id/fragment_pledge_list_pledge_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_pledge_list_municipality"
                    android:layout_toEndOf="@+id/fragment_pledge_list_profile_pic"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>