<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="40dp">

        <TextView
            android:id="@+id/Meals_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/text_view_placeholder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/meal_search_box"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textFilter"
                android:hint="@string/hint_search_box"
                android:textAlignment="textEnd"
                android:importantForAutofill="no"
                tools:targetApi="o"/>

            <Spinner
                android:id="@+id/meal_filter"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="?attr/colorButtonNormal" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/ViewMyMeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View my meal" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Meals_list_view"
            android:layout_width="match_parent"
            android:layout_height="266dp"
            android:background="?android:attr/colorBackground"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/button_add_meals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Add a meal" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
